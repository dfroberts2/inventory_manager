<div class="hidden-xs">
	<%= form_for [@scanner, @item] do |f| %>
		<div class="row form-group">
			<div class="col-md-3">
				<%= f.text_field :upc, class: "form-control upc-input"%>
			</div>
			<div class="col-md-3">
				<%= f.text_field :quantity, class: "form-control"%>
			</div>
			<div class="col-md-3">
				<%= f.text_field :retail_price, class: "form-control"%>
			</div>
			<div class="col-md-3">
				<input class="form-group" type="file" accept="image/*;capture=camera">
			</div>
		</div>
		<div class="row">
			<%= f.submit "Add Item", class: "col-md-10 btn btn-default btn-info"%>
		</div>
	<% end %>
</div>

<div class="hidden-lg hidden-md">
	<div class="row">
		<label class="col-xs-4">Scan Upc:</label>
		<input class="form-group col-xs-8" type="file" accept="image/*;capture=camera">
	</div>
	<%= form_for [@scanner, @item] do |f| %>
		<div class="row form-group">
			<div class="col-xs-4">
				<%= f.text_field :upc, placeholder: "UPC", class: "form-control upc-input"%>
			</div>
			<div class="col-xs-4">
				<%= f.text_field :quantity, placeholder: "Quantity", class: "form-control"%>
			</div>
			<div class="col-xs-4">
				<%= f.text_field :retail_price, placeholder: "Retail Price", class: "form-control"%>
			</div>
		</div>
		<div class="row">
			<%= f.submit "Add Item", class: "col-xs-12 btn btn-default btn-info"%>
		</div>
	<% end %>
</div>