<div class="edit-scanner">
	<div class="row">
		<h2 class="col-md-6 col-xs-6">Add Scanner Item:</h2>
		<h2><%= link_to "Back", inventory_path(@scanner.inventory), class: "btn btn-info btn-default back-button col-md-3 col-md-offset-3 col-xs-3 col-xs-offset-3" %></h2>
	</div>
	<%= render partial: "form_labels" %>
	<%= render partial: "new_item" %>
	<div class="row">
		<h2 class="col-md-6 col-xs-6">Update Scanner Items:</h2>
	</div>
	<%= render partial: "form_labels" %>
	<%= form_for @scanner do |f| %>
		<%= f.fields_for :category_items do |i_f| %>
			<div class="row form-group">
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :category_name, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :quantity, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :retail_price, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.check_box :_destroy%>
					<%= f.label :_destroy, "Delete Item?" %>
				</div>
			</div>
		<% end %>
		<div class="row">
		<%= f.submit "Update Scanner", class: "col-md-10 col-xs-10 btn btn-default btn-info"%>
		</div>
	<% end %>
</div>