<div id="scanner-count"><%= @scanner.category_items.count %></div>
<div class="edit-scanner">
	<div class="row hidden-md hidden-lg">
		<%= link_to "Back", inventory_path(@scanner.inventory), class: "btn btn-info btn-default back-button col-xs-12" %>
	</div>
	<div class="row">
		<h2 class="col-md-6 col-xs-12">Add Scanner Item:</h2>
		<h2><%= link_to "Back", inventory_path(@scanner.inventory), class: "btn btn-info btn-default back-button col-md-3 col-md-offset-3 hidden-xs" %></h2>
	</div>
	<div class="hidden-xs">
		<%= render partial: "form_labels" %>
	</div>
	<%= render partial: "new_item" %>
	<div class="row">
		<h2 class="col-md-6 col-xs-12">Update Scanner Items:</h2>
	</div>
	<%= render partial: "form_labels" %>
	<%= form_for @scanner, :html => {id: "edit-scanner-form"} do |f| %>
		<%= f.fields_for :category_items, @items do |i_f| %>
			<div class="row form-group edit-group">
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :category_name, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :quantity, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.text_field :retail_price, class: "form-control"%>
				</div>
				<div class="col-md-3 col-xs-3">
					<%= i_f.check_box :_destroy%>
					<%= f.label :_destroy, "Delete Item?" %>
				</div>
			</div>
		<% end %>
		<div class="row load-row">
			<button class="load-more-cat spaced-button btn btn-primary col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">Load More</button>
		</div>
		<div class="row">
			<%= f.submit "Update Scanner", class: "col-md-12 col-xs-12 btn btn-default btn-info"%>
		</div>
	<% end %>
</div>