<div class="select-container">
	<div class="row hidden-lg hidden-md"><%= link_to "Back", root_path, class: "btn btn-info btn-default back-button col-xs-12"%>
	</div>
	<div class="row">
		<h1 class="col-md-6 col-xs-12"><%= @business.name %></h1>
		<h1><%= link_to "Back", root_path, class: "btn btn-info btn-default back-button col-md-3 col-md-offset-3 hidden-xs"%></h1>
	</div>
	<div class="row">
		<h2 class="col-md-6 col-xs-12">Filter year:</h2>
		<h2 class="new-form-button btn btn-info col-md-3 col-md-offset-3 hidden-xs">New Inventory</h2>
	</div>
	<div class="row hidden-xs">
		<div class="new-form col-md-5 col-md-offset-7">
			<%= render partial: "/inventories/new", locals: {business: @business, inventory: @inventory} %>
		</div>
	</div>
	<select name="inventory-year"class="year-select form-control">
			<option>Select year</option>
			<% @business.inventory_years.each do |year| %>
				<option value="<%=year%>"><%=year%></option>
				<%end%>
	</select>
	<div class="inventory-links">
	</div>
	<div class="row hidden-md hidden-lg">
		<h2 class="new-form-button btn btn-info col-xs-12">New Inventory</h2>
	</div>
	<div class="row hidden-md hidden-lg">
		<div class="new-form col-xs-12">
			<%= render partial: "/inventories/new", locals: {business: @business, inventory: @inventory} %>
		</div>
	</div>
</div>