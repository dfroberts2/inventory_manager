<div class="select-container">
	<div class="row">
		<h1 class="col-md-6"><%= @business.name %></h1>
		<h1><%= link_to "Back", root_path, class: "btn btn-info btn-default back-button col-md-3 col-md-offset-3"%></h1>
	</div>
	<div class="row">
		<h2 class="col-md-6">Filter year:</h2>
		<h2 class="new-form-button btn btn-info col-md-3 col-md-offset-3">New Inventory</h2>
	</div>
	<div class="row">
		<div class="new-form col-md-5 col-md-offset-7">
			<%= render partial: "/inventories/new", locals: {business: @business, inventory: @inventory} %>
		</div>
	</div>
	<select class="year-select form-control">
			<option>Select year</option>
			<% @business.inventory_years.each do |year| %>
				<option value="<%=year%>"><%=year%></option>
				<%end%>
	</select>
	<div class="inventory-links">
	</div>
</div>