<div class="edit-margins">
	<h2>Edit Margins</h2>
	<div class="row">
		<div class="col-md-6">
			<h3>Category</h3>
		</div>
		<div class="col-md-6">
			<h3>Margin (use decimal)</h3>
		</div>
	</div>
	<%= form_for @inventory, url: :update_margins, method: :put do |f| %>
			<%= f.fields_for :categories do |c_f| %>
				<div class="row form-group">
					<div class="col-md-6">
						<%= label_tag Category.full_name(c_f.object) %>
					</div>
					<div class="col-md-6">
						<%= c_f.text_field :margin_value, class: 'form-control' %>
					</div>
				</div>
			<% end %>	

		<div class="row">
			<%= f.submit "submit", class: "col-md-10 btn btn-default" %>
		</div>
	<% end %>
</div>